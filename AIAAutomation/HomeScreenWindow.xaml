<Window x:Class="AIAAutomation.HomeScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIAAutomation"
        mc:Ignorable="d"
        Title="HomeScreenWindow" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Topmost="True">
    <Grid Margin="0,0,0,0">
        <Label x:Name="HomeScreenTitle" Content="AIA Automator" HorizontalAlignment="Left" Margin="164,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.192" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="createNew" Content="Create New Script" HorizontalAlignment="Left" Margin="125,194,0,0" VerticalAlignment="Top" Width="117" Height="30" Click="createNew_Click"/>
        <Button x:Name="loadExisting" Content="Edit Existing Script" HorizontalAlignment="Left" Margin="269,194,0,0" VerticalAlignment="Top" Width="117" Height="30" Click="loadExisting_Click"/>
        <Label x:Name="HomeScreenDescription" Content="This program automates any .exe program by using the 'automationid' label&#xD;&#xA; commonly found inside of programs." HorizontalAlignment="Center" Margin="10,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0.192" Height="62"/>

    </Grid>
</Window>
