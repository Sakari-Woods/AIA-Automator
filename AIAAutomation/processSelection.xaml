<Window x:Class="AIAAutomation.processSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIAAutomation"
        mc:Ignorable="d"
        Title="Select Process" Height="500" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Left" Width="490">
        <ListBox x:Name="processList" Height="342" Margin="30,30,0,0" VerticalAlignment="Top" AllowDrop="True" HorizontalAlignment="Left" Width="439"/>
        <Button x:Name="selectProcess" Content="Next" HorizontalAlignment="Right" Margin="0,450,20,0" VerticalAlignment="Top" Width="75" Click="selectProcess_Click"/>
        <Button x:Name="cancelProcess" Content="Cancel" HorizontalAlignment="Right" Margin="0,450,110,0" VerticalAlignment="Top" Width="75" Click="cancelProcess_Click"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Please select the program for automation" VerticalAlignment="Top" Width="439" Margin="30,377,21,0" FontWeight="Black" TextAlignment="Center" FontSize="18"/>

    </Grid>
</Window>
